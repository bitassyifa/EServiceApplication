<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EServiceApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="LoginStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/gray</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    <style name="NavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/ActiveText</item>
        <item name="itemTextAppearanceInactive">@style/InactiveText</item>
    </style>
    <style name="ActiveText">
        <item name="android:textColor">@color/teal_200</item>
    </style>
    <style name="InactiveText">
    <item name="android:textColor">@color/maroon</item>
    </style>

    <style name="CustomDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/maroon</item>
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
        <item name="android:colorAccent">@color/maroon</item>
    </style>

    <style name="CustomDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/maroon</item>
        <item name="android:calendarTextColor">@color/gray</item>
        <item name="android:dayOfWeekBackground">@color/gray</item>
        <item name="android:yearListSelectorColor">@color/maroon</item>
        <item name="android:datePickerMode">calendar</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">#B1A007</item>
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorPrimary">#FFEB3B</item>
    </style>

    <style name="CalendarViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/gray1</item>
    </style>

    <style name="CalendarViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
    <item name="android:textColor">#FFEB3B</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>